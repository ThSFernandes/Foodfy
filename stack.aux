version: '3.9'

services:
  db:
    image: postgres
    container_name: db-users
    restart: always
    shm_size: 128mb
    environment:
      POSTGRES_DB: users-auth
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin1234@
    ports:
      - "5432:5432"
    volumes:
      - ./database:/docker-entrypoint-initdb.d

  adminer:
    image: adminer
    container_name: db-users-adminer
    restart: always
    ports:
      - "8080:8080"
